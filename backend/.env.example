# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database Configuration
DATABASE_URL=postgresql://roblox_user:secure_password@localhost:5432/roblox_shop
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=roblox_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=roblox_shop

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_NAME=roblox-shop-session
SESSION_MAX_AGE=86400000

# Email Configuration (for password reset)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@robloxshop.com

# Payment Integration (promptpay-truewallet-system)
PROMPTPAY_PHONE=0944283381
TRUEWALLET_PHONE=0944283381
SMS_WEBHOOK_SECRET=your-sms-webhook-secret
PAYMENT_API_URL=http://localhost:3001

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Admin Configuration
ADMIN_SECRET_KEY=super-admin-secret-key
DEFAULT_ADMIN_EMAIL=admin@robloxshop.com
DEFAULT_ADMIN_PASSWORD=admin123

# Site Configuration
SITE_NAME=Roblox Code Shop
SITE_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false